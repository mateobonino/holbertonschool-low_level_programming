#include "main.h"
/**
* *cap_string - capitalizes all words
* @s: the string
*
*Return: returns the string capitlatized
*
*
*/
char *cap_string(char *s)
{
	int temp, i = 0;
	char *val = s;

	temp = s[i];

	if (s[i] >= 'a' && s[i] <= 'z')
	{
		s[i] -= 32;
	}
	while (*s != '\0')
	{
		if (temp == ' ' || temp == '\t' || temp == '\n' || temp == ',')
		{
			if (s[i] >= 'a' && s[i] <= 'z')
			{
				s[i] -= 32;
			}
		}
		if (temp == ';' || temp == '.' || temp == '!' || temp == '"')
		{
			if (s[i] >= 'a' && s[i] <= 'z')
			{
				s[i] -= 32;
			}
		}
		if (temp == '(' || temp == ')' || temp == '{' || temp == '}')
		{
			if (s[i] >= 'a' && s[i] <= 'z')
			{
				s[i] -= 32;
			}
		}
		temp = s[i];
		i++;
		s++;
	}
	return (val);
}
